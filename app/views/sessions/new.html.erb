<h1>Log in</h1>

<%= form_for(:session, url: log_in_path) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email, class: 'form-control' %>

  <p><%= f.label :password %>
  <%= link_to "(forgot password)", new_password_reset_path %><br />
  <%= f.password_field :password, class: 'form-control' %></p>

  <%= f.submit "Log in", class: 'btn btn-primary' %>
<% end %>