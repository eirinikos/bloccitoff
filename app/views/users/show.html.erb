<h2>Greetings, <%= @user.name %>!</h2>

<div class="list">
  <small>Member since: <%= @user.activated_at.to_date %>
  <p>E-mail address: <%=@user.email %></p></small>
</div><br />

<% if @user.items.count < 1 %>
  <h4>Do something!</h4>
<% elsif @user.items.count == 1 %>
  <h4> Here's the only thing you said you would do...</h4>
<% else %>
  <h4>Here are the <body class='js-items-count'><%= pluralize(@user.items.count, 'thing') %></body> you said you would do...</h4><br />
<% end %>

<div class="list">
  <%= render @items %>
</div><br />

<%= render 'items/form', locals: {user: @user, item: @item} %>