<h2>Edit your profile</h2>

<%= form_for(@user, url: user_path(@user), method: :patch) do |f| %>
  <div class="form-group">
      <p><%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %></p>
  </div>

  <div class="form-group">
    <p><%= f.label :email %><br />
    <%= f.email_field :email%></p>
  </div>  

  <div class="form-group">
    <p><%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "enter new password" %></p>
    <%= f.password_field :password_confirmation, placeholder: "re-enter new password" %></p>
    <small><i>(leave both fields blank if you don't want to change your password)</i></small>
  </div>  

  <div class="form-group">
    <p><%= f.label :current_password %><br />
    <%= f.password_field :current_password %></p>
    <small><i>(we need your current password to confirm your changes)</i></small>
  </div>

  <div class="form-group">
    <%= f.submit "Update", class: 'btn btn-primary' %> or <%= link_to "Cancel", root_url, class: 'btn btn-default' %>
  </div> 
<% end %>