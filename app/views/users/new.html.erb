<h1>Welcome to Bloccitoff!</h1>
<body>Sign up for a new account to start creating a self-destructing to-do list: </p>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <%= f.submit "Create account", class: 'btn btn-primary' %>
<% end %>